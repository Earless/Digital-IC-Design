# Digital IC Design sourceme file 2014

source /data/cad/sourceme_incl

setenv EDITOR               /usr/bin/nedit
setenv LANG                 C 

setenv CADENCEDIR           /data/cad/Cadence
setenv CADENCEVER           IC5
setenv IC_REL               5.1.41HF143
setenv CDS_TEXT_EDITOR      nedit 

setenv CDSHOME              $CADENCEDIR/$CADENCEVER/$IC_REL
setenv CDS_ROOT             $CDSHOME 
setenv CDS_INST_DIR         $CDSHOME
setenv CDS_INSTALL_DIR      $CDSHOME/tools/dfII
setenv CDS_Netlisting_Mode  Analog
setenv CDS_MMSIM            $CADENCEDIR/MMSIM_7.2HF307
setenv MGC_HOME /opt/cad/mentor/Calibre/ixl_cal_2008.1_13.11/

setenv CDS_LIC_FILE 27032@eros.et.tudelft.nl
setenv LM_LICENSE_FILE 27012@flexserv1.tudelft.nl:27017@flexserv1.tudelft.nl
setenv CDS_LIC_TIMEOUT 86400 

cad_pappend $CDSHOME/tools
cad_pappend $CDSHOME/tools/bin
cad_pappend $CDSHOME/tools/dfII
cad_pappend $CDSHOME/tools/dfII/bin
cad_pprepend $CDS_MMSIM/tools/bin
